package test;

import java.util.Scanner;

public class ConditionalStatements {

	public static void main(String[] args) {
		
		// Conditional statements 
		
		// 1. if 2.else 3.else if 4.switch
		// if(condition)is true then; else block will be executed
		// if(condition)is false then else if block will be executed
		
		boolean IsSunUp = true;
		 
		if (IsSunUp== true) {
			
			System.out.println("This is a day");
			
		}
		else 
			System.out.println("This is night");
		

		int age = 30;
		
		if (age>18) {
			
			System.out.println("can vote");
			
		}
		
		else 
			
			System.out.println("can't vote");
		
		
		//Logical operators
		//'&&' if both conditions are true then only the statement will be executed
		//'||' if any of the condition is true then the statement will be executed
		//'!' implies not equal to 
		
		
		boolean IsEligible = true;
		
		if(!IsEligible) 
			
			System.out.println("eligible to vote");
			
			else 	
			
				System.out.println("not eligible to vote");
		
		
		// program using conditional operator
		
		int pen = 10;
		int book = 50;
		
		Scanner sc = new Scanner(System.in);
		int finalprice = sc.nextInt();
		System.out.println("Enter your price");
		
		if(finalprice > pen && finalprice >book) {
			
			System.out.println("Can buy both");
			
		} 
		else if (finalprice > pen && finalprice < book){
			
			System.out.println("can get only one item");
			System.out.println("get more cash");
			
		} 
		
		else (finalprice < pen && finalprice < book){
			System.out.println("can't get anything");
		}
		
		
			
		}
			
		}
	


